{
	"manifest_version": 2,
	"name": "Nemo",
	"description": "Instant Translator",
	"version": "0.1",

    "author": "Sergey Ponomarenko>",

	"options_page": "options/options.html",

    // "background" : {
    //     "scripts": [
    //     	"js/options.js",
    //         "js/core.js"
    //         // "js/mechanism/google.js"
    //     ]
    // },

    "background" : {
        "page": "b.html"
    },

	"icons": {
		"128": "icons/ert_128x128.png",
		"48": "icons/ert_48x48.png",
		"16": "icons/ert_16x16.png"
